<Window x:Class="SimpleNotes.NoteDeleteConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Delete" Height="150" Width="300"
        Background="red">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Are you sure you want to delete this note?" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Yes" Width="75" Margin="5" Click="YesButton_Click"/>
                <Button Content="No" Width="75" Margin="5" Click="NoButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
